<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/main_lotofacil"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="40dp"
        android:onClick="click"
        android:background="@color/colorPrimary"
        android:text="Lotofacil"
        android:textAllCaps="false"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/main_quina"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="40dp"
        android:onClick="click"
        android:background="@color/colorPrimary"
        android:text="Quina"
        android:textAllCaps="false"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/main_lotofacil" />

    <Button
        android:id="@+id/main_mega_sena"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="40dp"
        android:background="@color/colorPrimary"
        android:onClick="click"
        android:text="Mega-Sena"
        android:textAllCaps="false"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/main_quina" />

    <TextView
        android:id="@+id/main_resultado"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text=""
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/main_mega_sena"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_tipo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Clique em um botão para gerar os números da loteria"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        />

</android.support.constraint.ConstraintLayout>